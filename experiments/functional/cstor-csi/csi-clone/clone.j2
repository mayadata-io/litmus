kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  name: "{{ pvc_name }}"
spec:
  storageClassName: "{{ storage_class_name }}"
  dataSource:
    name: "{{ snapshot_name }}"
    kind: VolumeSnapshot
    apiGroup: snapshot.storage.k8s.io
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: "{{ storage_capacity }}"