apiVersion: v1
kind: Pod
metadata:
  name: busyboxclone
  namespace: "{{ namespace }}"
  labels:
    app: "{{ app_label }}"
spec:
  containers:
  - name: app-busybox
    imagePullPolicy: IfNotPresent
    image: busybox
    command: ["/bin/sh"]
    args: ["-c", "while true; do sleep 10;done"]
    env:
    volumeMounts:
    - name: data-vol
      mountPath: /busybox
  volumes:
  - name: data-vol
    persistentVolumeClaim:
      claimName: "{{ pvc_name }}"