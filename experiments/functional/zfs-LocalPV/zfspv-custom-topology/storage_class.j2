apiVersion: storage.k8s.io/v1
kind: StorageClass
metadata:
  name: zfspv-custom-topology-wait
allowVolumeExpansion: true
parameters:
  fstype: "{{ fs_type }}"
  poolname: "{{ zpool_name }}"
provisioner: zfs.csi.openebs.io
volumeBindingMode: WaitForFirstConsumer
allowedTopologies:
- matchLabelExpressions:
  - key: {{ lkey }} 
    values:
      - {{ lvalue }}

